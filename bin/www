#!/usr/bin/env node
require('dotenv').load();

var debug = require('debug')('my-application');
var app = require('../app');
var tcp = require('../tcp').start();

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

var tcpPort = process.env.TCP_PORT || 3001;

tcp.server.listen(tcpPort, function() {
  console.log("TCP server bound to port " + tcpPort);
});
